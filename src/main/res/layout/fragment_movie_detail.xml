<?xml version="1.0" encoding="utf-8"?>
<com.bojandevic.bihoskop.customs.ObservableScrollView
    android:id="@+id/movieDetailScrollView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.bojandevic.bihoskop.MovieDetailFragment"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <FrameLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <LinearLayout
            android:id="@+id/movieDetails"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/detail_padding_top"
            android:paddingLeft="@dimen/detail_padding_left"
            android:paddingRight="@dimen/detail_padding_left">
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="85dp"
                    android:layout_height="125dp"
                    android:background="@android:color/darker_gray"
                    android:layout_gravity="center_vertical"
                    android:transitionName="@string/transition_poster"
                    android:id="@+id/movieDetailPoster" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="7dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:layout_marginBottom="3dp"
                        android:textSize="20sp"
                        android:transitionName="@string/transition_title"
                        android:fontFamily="sans-serif-condensed"
                        android:id="@+id/movieDetailTitle"
                        android:text="Title" />
                    <TextView
                        android:id="@+id/movieDetailCategory"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="sans-serif-light"
                        android:textColor="#444"
                        android:textStyle="italic"
                        android:transitionName="@string/transition_category" />
                    <RatingBar
                        android:id="@+id/movieDetailRating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:transitionName="@string/transition_rating"
                        android:longClickable="true"
                        android:clickable="true"
                        android:max="5"
                        style="@style/AppTheme.Widget.RatingBar" />

                </LinearLayout>
            </LinearLayout>
            <TextView
                android:text="Detalji"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:fontFamily="sans-serif"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:paddingLeft="10dp"/>
            <TableLayout
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:background="#e0e0e0"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:layout_marginBottom="10dp">
                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                    <TextView android:layout_height="wrap_content"
                        android:id="@+id/filmDetaljiGlumci"
                        android:layout_width="fill_parent"
                        android:paddingRight="20dp"
                        android:paddingBottom="5dp"
                        android:textStyle="bold"
                        android:text="Uloge: " />
                    <TextView
                        android:id="@+id/movieDetailActors"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Glumci" />
                </TableRow>
                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:paddingRight="20dp"
                        android:paddingBottom="5dp"
                        android:text="Rezija:" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/movieDetailDirector"
                        android:text="Reziser" />
                </TableRow>
                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:paddingRight="20dp"
                        android:text="Trajanje:" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Trajanje"
                        android:id="@+id/movieDetailLength" />
                </TableRow>
            </TableLayout>
            <TextView
                android:text="Termini"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:fontFamily="sans-serif"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:paddingLeft="10dp"/>
            <TextView
                android:id="@+id/movieDetailTimes"
                android:text=""
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#e0e0e0"
                android:textSize="15sp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:text="SadrÅ¾aj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:fontFamily="sans-serif"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:paddingLeft="10dp"/>
            <TextView
                android:id="@+id/movieDetailDescription"
                android:text=""
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#e0e0e0"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:layout_marginBottom="10dp"/>
            <View
                android:id="@+id/movieDetailPlayerPlaceholder"
                android:layout_width="match_parent"
                android:layout_height="110dp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/movieDetailPlayerContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <FrameLayout
                android:id="@+id/movieDetailPlayer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </FrameLayout>
</com.bojandevic.bihoskop.customs.ObservableScrollView>
